<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/oi_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ri_tv_rider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s_rider" />

        <TextView
            android:id="@+id/ri_tv_rider_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ri_tv_rider_label"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="@string/s_location" />

        <TextView
            android:id="@+id/ri_tv_rider_label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ri_tv_rider_label2"
            android:layout_marginTop="5dp"
            android:text="@string/s_zone" />

        <TextView
            android:id="@+id/ri_tv_rider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/ri_tv_rider_label"
            android:text="TextView" />

        <TextView
            android:id="@+id/ri_tv_rider2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ri_tv_rider"
            android:layout_alignStart="@+id/ri_tv_rider"
            android:layout_marginTop="5dp"
            android:text="TextView" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>