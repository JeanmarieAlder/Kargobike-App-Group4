<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.MonthlyReportActivity">

    <TextView
        android:id="@+id/monthlyReport_tv_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/s_select_date"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mr_tv_titleHours"
        app:layout_constraintEnd_toStartOf="@+id/monthlyReport_tv_calendar_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monthlyReport_tv_calendar_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/s_select_date"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/mr_tv_titleHours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monthlyReport_tv_calendar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="62dp"
        android:layout_height="15dp"
        android:text="@string/s_to_points"
        app:layout_constraintBottom_toTopOf="@+id/monthlyReport_tv_calendar_2"
        app:layout_constraintStart_toStartOf="@+id/monthlyReport_tv_calendar_2" />

    <TextView
        android:id="@+id/mr_tv_titleHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_workingTime"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mr_tv_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/mr_tv_titleHours"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/mr_tv_titleHours"
        app:layout_constraintTop_toBottomOf="@+id/mr_tv_titleHours" />

    <TextView
        android:id="@+id/mr_tv_from"
        android:layout_width="55dp"
        android:layout_height="17dp"
        android:text="@string/s_From_points"
        app:layout_constraintBottom_toTopOf="@+id/monthlyReport_tv_calendar"
        app:layout_constraintStart_toStartOf="@+id/monthlyReport_tv_calendar" />

</androidx.constraintlayout.widget.ConstraintLayout>